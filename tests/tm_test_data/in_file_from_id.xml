<!-- Test that a component  defined separately from a command still resolves correctly. -->
<commands>

    <command name="TO_RESOLVE">
        <component indicator="SPEECHACT" type="SA_TELL">
            <role name="CONTENT">
                <!-- This component sis defined externally -->
                <component from_id="ID"/>
            </role>
        </component>
    </command>

    <!-- And here is the definition -->
    <component id="ID" indicator="BARE" type="FRUIT" word="APPLE"/>

</commands>